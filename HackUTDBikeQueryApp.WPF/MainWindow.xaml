<views:MvxWindow x:Class="BikeController.WPF.MainWindow"
        xmlns:views="clr-namespace:MvvmCross.Platforms.Wpf.Views;assembly=MvvmCross.Platforms.Wpf"
        xmlns:adonisExtensions="clr-namespace:AdonisUI.Extensions;assembly=AdonisUI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BikeController.WPF"
        adonisExtensions:CursorSpotlightExtension.MaxBlurRadius="128" 
        mc:Ignorable="d"
        ResizeMode="CanMinimize"
        Title="BikeController" Height="520" Width="{StaticResource WindowWidth}">
    <Grid>

    </Grid>
    
    <!-- Applies Adonis Styling to the Window -->
    <views:MvxWindow.Style>
        <Style TargetType="Window" BasedOn="{StaticResource {x:Type Window}}"/>
    </views:MvxWindow.Style>
</views:MvxWindow>
